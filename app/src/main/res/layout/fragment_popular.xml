<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.lex.vinepopular.vinepopular.PopularFragment">

    <data>

        <variable
            name="testObject"
            type="com.lex.vinepopular.vinepopular.models.TestModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/test_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{testObject.name}" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/test_text"
            app:imageUrl="@{testObject.imageUrl}"
            app:placeholder="@{@drawable/ic_camera_alt_black_24dp}" />
    </RelativeLayout>
</layout>
